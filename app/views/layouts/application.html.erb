<!DOCTYPE html>
<html>
  <head>
    <title>SchoolCentral</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body class="bg-light">
    <header>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href=<%= dashboard_path %>>School Central</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href=<%= courses_path %>>Courses</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= teachers_path %>>Staff</a>
            </li>
          </ul>
          <ul class="navbar-nav navbar-right">
            <li class="nav-item text-right">
              <a class="nav-link" href=<%= logout_path %>>Logout</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <div>
      <main>
        <div class="container mt-4">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
